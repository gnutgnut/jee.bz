# Proxmox Connection Configuration
# Copy this file to config.env and fill in your values
# DO NOT commit config.env to git (it's in .gitignore)

# Proxmox Server
PROXMOX_HOST=proxmox.cbmcra.website
PROXMOX_PORT=8006
PROXMOX_SSH_PORT=22
PROXMOX_USER=root

# Container Configuration
CONTAINER_ID=100
CONTAINER_HOSTNAME=minecraft-fabric
CONTAINER_PASSWORD=ChangeMe123!

# Storage (check 'pvesm status' on Proxmox for available storage)
STORAGE_POOL=local-lvm
TEMPLATE_STORAGE=local

# Resources
CPU_CORES=8
MEMORY_MB=16384
SWAP_MB=4096
DISK_SIZE_GB=100

# Network
# Use 'dhcp' for automatic IP, or 'IP/CIDR' for static (e.g., 192.168.1.100/24)
NETWORK_IP=dhcp
NETWORK_GATEWAY=
NETWORK_BRIDGE=vmbr0

# Minecraft Configuration
MINECRAFT_VERSION=1.21.4
FABRIC_INSTALLER_VERSION=1.0.1
JAVA_HEAP_SIZE=12G
MINECRAFT_PORT=25565
RCON_PORT=25575
RCON_PASSWORD=change_this_password

# Backups
BACKUP_RETENTION_DAYS=7
BACKUP_TIME=3  # Hour of day (0-23) for automated backups

# Web Management
INSTALL_WEBPANEL=true
WEBPANEL_PORT=24444
WEBPANEL_DAEMON_PORT=23333

# Optional: External IP (if different from PROXMOX_HOST)
EXTERNAL_IP=

# Optional: Discord Webhook for notifications
DISCORD_WEBHOOK_URL=
